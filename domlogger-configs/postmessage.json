{
  "hooks": {
    "PSTMSG": {
      "function": ["window.postMessage"],
      "event": ["message"]
    }
  },
  "config": {
    "message": {
      "alert": {
        "match": [
          ".match",
          ".indexOf",
          ".endsWith",
          ".includes",
          ".replace",
          ".startsWith",
          ".search",
          ".innerHTML",
          ".outerHTML",
          "postMessage",
          "window.origin",
          "opener",
          "eval"
        ],
        "notification": true
      }
    }
  },
  "removeHeaders": ["content-security-policy", "x-frame-options"]
}
